      .col-md-1
      
    // Sign Up Banner
    .row
      .col-md-12#emailBanner
        form
          .col-md-1
          .col-md-8.col-md-offset-2
            .col-md-6
              input.form-control#signUp(type="text" placeholder="Enter Email to Sign Up for our Newsletter!")
            .col-md-2.flexCenter
              button.text-left.center-block#signUpBTN(type="submit") Sign Up!
          .col-md-3
    
    // Footer
    include includes/footer.jade
    script(src='js/functions.js')
        
        
      
          
        
